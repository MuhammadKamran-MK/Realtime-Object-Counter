<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_vertical_space"
        android:layout_marginTop="@dimen/screen_horizontal_space"
        android:layout_marginEnd="@dimen/screen_vertical_space"
        android:layout_marginBottom="@dimen/screen_horizontal_space"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:weightSum="10">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgObj"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="vertical"
                android:padding="@dimen/_6sdp">

                <TextView
                    android:id="@+id/tvObjName"
                    style="@style/DarkTextViewStyle"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:text="Object Name" />

                <TextView
                    android:id="@+id/tvObjCount"
                    style="@style/LiteTextViewStyle"
                    android:text="1 Object" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>